#!/bin/bash

# 1. –ü–æ–ª—É—á–∞–µ–º –ø—É—Ç—å –∫ –≥–ª–∞–≤–Ω–æ–º—É worktree
MAIN_WORKTREE=$(git worktree list | head -n 1 | awk '{print $1}')

if [ -z "$MAIN_WORKTREE" ]; then
  echo "‚ùå –û—à–∏–±–∫–∞: –ù–µ —É–¥–∞–ª–æ—Å—å –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å git worktree."
  exit 1
fi

echo "üîç –ì–ª–∞–≤–Ω—ã–π worktree: $MAIN_WORKTREE"

# 2. –û–ø—Ä–µ–¥–µ–ª—è–µ–º –ø—É—Ç—å –∫ —Ñ–∞–π–ª—É exclude
# –û–±—ã—á–Ω–æ –æ–Ω –ª–µ–∂–∏—Ç –≤ .git/info/exclude –≤–Ω—É—Ç—Ä–∏ –≥–ª–∞–≤–Ω–æ–π –ø–∞–ø–∫–∏
# –ù–æ –µ—Å–ª–∏ –≥–ª–∞–≤–Ω–∞—è –ø–∞–ø–∫–∞ —Å–∞–º–∞ worktree (—Ä–µ–¥–∫–æ, –Ω–æ –±—ã–≤–∞–µ—Ç), –ø—É—Ç—å –º–æ–∂–µ—Ç –æ—Ç–ª–∏—á–∞—Ç—å—Å—è.
# –ù–∞–¥–µ–∂–Ω–µ–µ —Å–ø—Ä–æ—Å–∏—Ç—å —É git, –≥–¥–µ –ª–µ–∂–∏—Ç –æ–±—â–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è.
GIT_COMMON_DIR=$(git rev-parse --git-common-dir)
EXCLUDE_FILE="$GIT_COMMON_DIR/info/exclude"

FILES_TO_LINK=()

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ñ–∞–π–ª–æ–≤ –≤ —Å–ø–∏—Å–æ–∫
add_files_from_config() {
  local cfg_file="$1"
  if [ -f "$cfg_file" ]; then
    echo "üìÑ –ß–∏—Ç–∞–µ–º —Å–ø–∏—Å–æ–∫ –∏–∑: $cfg_file"
    while IFS= read -r line || [[ -n "$line" ]]; do
      # –£–¥–∞–ª—è–µ–º –ø—Ä–æ–±–µ–ª—ã
      line=$(echo "$line" | xargs)
      # –ü—Ä–æ–ø—É—Å–∫–∞–µ–º –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–∏ (#) –∏ –ø—É—Å—Ç—ã–µ —Å—Ç—Ä–æ–∫–∏
      if [[ "$line" =~ ^#.* ]] || [[ -z "$line" ]]; then continue; fi
      FILES_TO_LINK+=("$line")
    done < "$cfg_file"
  else
    echo "‚ö†Ô∏è –§–∞–π–ª –Ω–µ –Ω–∞–π–¥–µ–Ω: $cfg_file"
  fi
}

# 3. –°–æ–±–∏—Ä–∞–µ–º —Å–ø–∏—Å–æ–∫ —Ñ–∞–π–ª–æ–≤
# –°–Ω–∞—á–∞–ª–∞ –∏–∑ .git/info/exclude (—Ç–∞–∫ –∫–∞–∫ –≤—ã –ø—Ä–æ—Å–∏–ª–∏ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –µ–≥–æ –∫–∞–∫ –∏—Å—Ç–æ—á–Ω–∏–∫)
add_files_from_config "$EXCLUDE_FILE"

# –ú–æ–∂–Ω–æ —Ç–∞–∫–∂–µ –æ—Å—Ç–∞–≤–∏—Ç—å –ø–æ–¥–¥–µ—Ä–∂–∫—É .worktree-links –∫–∞–∫ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ–≥–æ –∫–æ–Ω—Ñ–∏–≥–∞
# –¥–ª—è —Ñ–∞–π–ª–æ–≤, –∫–æ—Ç–æ—Ä—ã–µ –ù–ï –∏–≥–Ω–æ—Ä–∏—Ä—É—é—Ç—Å—è git, –Ω–æ –Ω—É–∂–Ω—ã –≤ worktree (–Ω–∞–ø—Ä–∏–º–µ—Ä, —Å–∫—Ä–∏–ø—Ç—ã)
EXTRA_CONFIG="$MAIN_WORKTREE/.worktree-links"
if [ -f "$EXTRA_CONFIG" ]; then
  add_files_from_config "$EXTRA_CONFIG"
fi

# –£–±–∏—Ä–∞–µ–º –¥—É–±–ª–∏–∫–∞—Ç—ã –∏–∑ —Å–ø–∏—Å–∫–∞ (–µ—Å–ª–∏ —Ñ–∞–π–ª –µ—Å—Ç—å –∏ —Ç–∞–º, –∏ —Ç–∞–º)
IFS=$'\n' SORTED_UNIQUE=($(sort -u <<<"${FILES_TO_LINK[*]}"))
unset IFS

# 4. –õ–∏–Ω–∫—É–µ–º
echo "üîó –ù–∞—á–∏–Ω–∞–µ–º –ª–∏–Ω–∫–æ–≤–∫—É..."

for ITEM in "${SORTED_UNIQUE[@]}"; do
  SOURCE="$MAIN_WORKTREE/$ITEM"
  TARGET="./$ITEM"

  # –ì–ª–∞–≤–Ω–∞—è —Ñ–∏—à–∫–∞: –ú—ã –ª–∏–Ω–∫—É–µ–º —Ç–æ–ª—å–∫–æ —Ç–æ, —á—Ç–æ –†–ï–ê–õ–¨–ù–û —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –≤ –∏—Å—Ç–æ—á–Ω–∏–∫–µ.
  # –≠—Ç–æ –æ—Ç—Ñ–∏–ª—å—Ç—Ä–æ–≤—ã–≤–∞–µ—Ç –∞–±—Å—Ç—Ä–∞–∫—Ç–Ω—ã–µ –ø–∞—Ç—Ç–µ—Ä–Ω—ã –∏–∑ exclude —Ç–∏–ø–∞ "*.log" –∏–ª–∏ "temp/",
  # –µ—Å–ª–∏ —Å–∞–º–æ–π –ø–∞–ø–∫–∏ "temp" –∏–ª–∏ —Ñ–∞–π–ª–∞ "*.log" –Ω–µ—Ç.
  
  if [ -e "$SOURCE" ]; then
    # –ï—Å–ª–∏ —Ü–µ–ª–µ–≤–æ–π —Ñ–∞–π–ª —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –∏ —ç—Ç–æ –Ω–µ —Å–∏–º–ª–∏–Ω–∫ ‚Äî –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–∞–µ–º (–±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç—å)
    if [ -e "$TARGET" ] && [ ! -L "$TARGET" ]; then
      echo "‚ö†Ô∏è  –ü—Ä–æ–ø—É—â–µ–Ω–æ: $ITEM (—Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–æ–∫–∞–ª—å–Ω—ã–π —Ñ–∞–π–ª, –Ω–µ —Ö–æ—á—É –ø–µ—Ä–µ–∑–∞–ø–∏—Å—ã–≤–∞—Ç—å)"
      continue
    fi

    # –ü–µ—Ä–µ—Å–æ–∑–¥–∞–µ–º —Å—Å—ã–ª–∫—É (ln -sf –æ–±–Ω–æ–≤–∏—Ç –µ—ë, –µ—Å–ª–∏ –æ–Ω–∞ —É–∂–µ –µ—Å—Ç—å)
    ln -sf "$SOURCE" "$TARGET"
    echo "‚úÖ  $ITEM"
  elif [[ "$ITEM" == *"*"* ]]; then
      # –¢–∏—Ö–∞—è –æ–±—Ä–∞–±–æ—Ç–∫–∞: –µ—Å–ª–∏ —ç—Ç–æ glob –ø–∞—Ç—Ç–µ—Ä–Ω (*.log), –º—ã –ø—Ä–æ—Å—Ç–æ –µ–≥–æ –∏–≥–Ω–æ—Ä–∏—Ä—É–µ–º, 
      # —Ç–∞–∫ –∫–∞–∫ –º—ã –Ω–µ —É–º–µ–µ–º –ª–∏–Ω–∫–æ–≤–∞—Ç—å –º–∞—Å–∫–∏ —Ñ–∞–π–ª–æ–≤ (—Ç–æ–ª—å–∫–æ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã–µ –ø—É—Ç–∏).
      : 
  else
    # –§–∞–π–ª –≤ exclude –∑–∞–ø–∏—Å–∞–Ω, –Ω–æ —Ñ–∏–∑–∏—á–µ—Å–∫–∏ –≤ –≥–ª–∞–≤–Ω–æ–π –ø–∞–ø–∫–µ –µ–≥–æ –Ω–µ—Ç
    # echo "‚ö™Ô∏è  $ITEM (–Ω–µ –Ω–∞–π–¥–µ–Ω –≤ –∏—Å—Ç–æ—á–Ω–∏–∫–µ)"
    :
  fi
done

echo "üéâ –ì–æ—Ç–æ–≤–æ!"
